<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NotificationCompress.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NotificationCompress.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Actions"
            ContentTemplate="{DataTemplate local:ActionsPage}"
            Route="Actions" />
    </TabBar>
</Shell>
